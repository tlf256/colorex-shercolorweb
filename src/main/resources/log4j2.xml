<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
<Properties>
	<Property name="file-pattern">%d{dd/MMM/yyyy HH:mm:ss,SSS}- %c{1}: %m%n</Property>
</Properties>
<Appenders>
	<Console name="Console">
		<PatternLayout>
			<pattern>${file-pattern}</pattern>
		</PatternLayout>
	</Console>
</Appenders>
<Loggers>
	<Logger name="org.springframework" level="info" additivity="false">
		<appender-ref ref="Console" level="info"/>
	</Logger>
	<Logger name="org.hibernate.sql" level="error" additivity="false">
		<appender-ref ref="Console" level="error"/>
	</Logger>
	<Logger name="org.hibernate" level="error" additivity="false">
		<appender-ref ref="Console" level="error"/>
	</Logger>
	<Logger name="com.sherwin.shercolor" level="info" additivity="false">
		<appender-ref ref="Console" level="info"/>
	</Logger>
	<Logger name="com.opensymphony.xwork2" level="warn" additivity="false">
		<appender-ref ref="Console" level="warn"/>
	</Logger>
	<Logger name="org.apache.struts2" level="warn" additivity="false">
		<appender-ref ref="Console" level="warn"/>
	</Logger>
	<Root level="info" additivity="false">
		<appender-ref ref="Console"/>
	</Root>
</Loggers>
</Configuration>