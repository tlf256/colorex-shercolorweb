<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
	<Properties>
		<Property name="log-path">/swpkg/shared/web_apps/server/shercolor/log</Property>
		<Property name="file-pattern">%d{dd/MMM/yyyy HH:mm:ss,SSS}- %c{1}: %m%n</Property>
	</Properties>
	<Appenders>
		<RollingFile name="RollingFile" fileName="${log-path}/CustomerSherColorWeb.log"
					 filePattern="${log-path}/CustomerSherColorWeb-%d{yyyy-MM-dd}-%i.log" >
			<PatternLayout>
				<pattern>${file-pattern}</pattern>
			</PatternLayout>
			<Policies>
				<SizeBasedTriggeringPolicy size="5 MB" />
			</Policies>
			<DefaultRolloverStrategy max="10"/>
		</RollingFile>
		<Console name="Json" target="SYSTEM_OUT">
			<JsonTemplateLayout eventTemplateUri="classpath:LogstashJsonEventLayoutV1.json"/>
		</Console>
	</Appenders>
	<Loggers>
		<Logger name="org.springframework" level="info" additivity="false">
			<appender-ref ref="RollingFile" level="info"/>
			<appender-ref ref="Json" level="info"/>
		</Logger>
		<Logger name="org.hibernate.sql" level="error" additivity="false">
			<appender-ref ref="RollingFile" level="error"/>
			<appender-ref ref="Json" level="error"/>
		</Logger>
		<Logger name="org.hibernate" level="error" additivity="false">
			<appender-ref ref="RollingFile" level="error"/>
			<appender-ref ref="Json" level="error"/>
		</Logger>
		<Logger name="com.sherwin.shercolor" level="info" additivity="false">
			<appender-ref ref="RollingFile" level="info"/>
			<appender-ref ref="Json" level="info"/>
		</Logger>
		<Logger name="com.opensymphony.xwork2" level="warn" additivity="false">
			<appender-ref ref="RollingFile" level="warn"/>
			<appender-ref ref="Json" level="warn"/>
		</Logger>
		<Logger name="org.apache.struts2" level="warn" additivity="false">
			<appender-ref ref="RollingFile" level="warn"/>
			<appender-ref ref="Json" level="warn"/>
		</Logger>
		<Root level="info" additivity="false">
			<appender-ref ref="Json"/>
			<appenderRef ref="RollingFile"/>
		</Root>
	</Loggers>
</Configuration>