{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "required": [
        "store.enabled",
        "env"
    ],
    "properties": {
        "image": {
            "description": "Container Image",
            "properties": {
                "repo": {
                    "type": "string"
                },
                "tag": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        "store": {
            "properties": {
                "enabled": {
                    "type": "boolean"
                }
            }
        },
        "env": {
            "type": "string",
            "enum": ["dev","qa","prod"]
        }
    },
    "title": "Values",
    "type": "object"
}